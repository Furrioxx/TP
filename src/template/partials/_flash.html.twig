{% if flash is not empty %}
    <div class="container">
    {% for type, message in flash %}
        <div class="alert alert-{{type}} alert-dismissible fade show" role="alert">
            {{message}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
    </div>
    
{% endif %}