{% extends 'base.html.twig' %}

{% block title %}Créer une task
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Créer une Task</h1>

		<a href="{{ path("tasks") }}">
			<button type="button" class="btn btn-primary mb-3">Retour</button>
		</a>

		<form method="post">
			<div class="mb-3">
				<label for="title" class="form-label">Titre</label>
				<input type="text" name="title" class="form-control" id="title">
			</div>
			<div class="mb-3">
				<label for="description" class="form-label">Description</label>
				<input type="text" name="description" class="form-control" id="description">
			</div>
			<div class="form-group mt-3 mb-3">
				<div>
					<label>Status :<label></div>
						<div>
							<select class="form-select" name="status">
								<option disabled selected>-- Choisir une status --</option>
								<option value="0">A Faire</option>
								<option value="1">En Cours</option>
								<option value="2">Finis</option>
							</select>
						</div>
					</div>
					<button type="submit" name="submit" class="btn btn-success">Créer</button>
				</form>
			</div>
		{% endblock %}
