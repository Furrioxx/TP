{% extends 'base.html.twig' %}

{% block title %}Modifier une task
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Modifier une Task</h1>

		<a href="{{ path("tasks") }}">
			<button type="button" class="btn btn-primary mb-3">Retour</button>
		</a>

		<form method="post">
			<div class="mb-3">
				<label for="title" class="form-label">Titre</label>
				<input type="text" value="{{task.title}}" name="title" class="form-control" id="title">
			</div>
			<div class="mb-3">
				<label for="description" class="form-label">Description</label>
				<input type="text" value="{{task.description}}" name="description" class="form-control" id="description">
			</div>
			<div class="form-group mt-3 mb-3">
				<div>
					<label>Status :<label></div>
						<div>
							<select class="form-select" name="status">
								<option value="0" {% if task.status == 0 %} selected {% endif %}>A Faire</option>
								<option value="1" {% if task.status == 1 %} selected {% endif %}>En Cours</option>
								<option value="2" {% if task.status == 2 %} selected {% endif %}>Finis</option>
							</select>
						</div>
					</div>
					<button type="submit" name="submit" class="btn btn-success">Modifier</button>
				</form>
			</div>
		{% endblock %}
