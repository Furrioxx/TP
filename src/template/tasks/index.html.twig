{% extends 'base.html.twig' %}

{% block title %}Toutes vos Tasks
{% endblock %}

{% block body %}

	<div class="container">
		<h1>Toutes vos Tasks</h1>

		<div>
			<a href="{{ path("tasks/add") }}">
				<button type="button" class="btn btn-primary mb-3">Ajouter une Task</button>
			</a>
		</div>

		{% for task in tasks %}
			<div class="card mb-3" style="width: 18rem;">
				<div class="card-body">
					<h5 class="card-title">{{ task.title }}</h5>
					<p class="card-text">{{ task.description }}</p>
					<a href="{{ path('tasks/edit/' ~ task.id) }}" class="card-link">
						Modifier
					</a>
					<a href="{{ path('tasks/delete/' ~ task.id) }}" class="card-link">
						Supprimer
					</a>
				</div>
			</div>
		{% endfor %}

	</div>

{% endblock %}
